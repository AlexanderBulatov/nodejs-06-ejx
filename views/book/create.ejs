<%- include('../port/page-start', {}) %>
  <%- include('../port/menu') %>

    <h1>Добавить книгу</h1>

    <div class="row">
      <div class="col-sm-6">

        <form method="POST" enctype="multipart/form-data" class="mt-5">
          <div class="form-group">
            <label for="inputTitle">Заголовок</label>
            <input type="text" value="" name="title" class="form-control" id="inputTitle" required>
          </div>

          <div class="form-group">
            <label for="inputDesc">Описание</label>
            <textarea rows="3" name="description" class="form-control" id="inputDesc"></textarea>
          </div>

          <div class="form-group">
            <label for="inputDesc">Автор</label>
            <textarea rows="1" name="authors" class="form-control" id="inputDesc"></textarea>
          </div>

          <div class="form-group">
            <label for="inputDesc">Понравилось</label>
            <textarea rows="1" name="favorite" class="form-control" id="inputDesc"></textarea>
          </div>

          <div class="form-group mt-3">
            <label class="mr-2">Загрузить файл:</label>
            <input type="file" name="uploaded_file" title="Выбрать файл">
          </div>

          <div class="form-group text-right ">
            <button type="submit" class="btn btn-primary">Сохранить</button>
          </div>

        </form>
      </div>
    </div>

    <%- include('../port/page-end') %>